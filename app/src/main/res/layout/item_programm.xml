<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_outline"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/channel_description_layout_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/programm_description_layout_height"
        android:background="@color/colorBackgroundAll"
        android:orientation="vertical">

        <TextView
            android:id="@+id/program_title_list"
            style="@style/MainTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
         android:drawablePadding="16dp"
        android:id="@+id/list_channel_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/channel_description_layout_list" />


    <TextView
        android:id="@+id/program_description_list"
        style="@style/SimpleText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/list_channel_image"
        android:background="@color/colorBackgroundAll" />


</RelativeLayout>