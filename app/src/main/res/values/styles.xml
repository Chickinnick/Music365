<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/common_signin_btn_light_text_default</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DrawerTitle">
        <!--<item name="android:background">@drawable/md__list_selector_holo_dark</item>-->
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>


        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="MainTitle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SimpleText">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="MenuImage">
        <item name="android:layout_margin">@dimen/menu_drawable_padding</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_width">@dimen/menu_icon_side</item>
        <item name="android:layout_height">@dimen/menu_icon_side</item>
    </style>

    <style name="ChannelTitle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/channel_title_text_size</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
